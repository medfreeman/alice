%nav.ui.container
  .ui.text.menu
    .item=link_to(image_tag("logo-alice.png", class: "logo"), root_path)
    .item.blog-titles
      %div    
        .blog-title
          Blog Review
        .ui.breadcrumb
          .section= link_to 'epfl'
          %i.right.angle.icon.divider
          .section= link_to 'alice'
          %i.right.angle.icon.divider
          .section= link_to 'y1 inside Lausanne', root_path
    - if user_signed_in?
      #logout-link.right.item.ui.dropdown
        .text My Account
        %i.dropdown.icon
        .menu
          = link_to "New Post", new_post_path, class: "item"
          - if !current_user.studio.nil?
            = link_to "My Posts", student_posts_path(current_user.studio, current_user), class: "item"
          - if current_user.director? && !current_user.studio.nil?
            = link_to "Edit my Studio", edit_studio_path(current_user.studio), class: 'item'
          - if current_user.admin?
            = link_to "Manage Users", users_path, class: "item"
          = link_to "LOG OUT", destroy_user_session_path, method: 'DELETE', class: "item"
    - else
      #login-link.right.item
        LOGIN
      #login-form.ui.basic.modal.small
        %i.close.icon
        .header Log In
        = form_for(:user, :as => "User", :url => session_path(:user), role: "form", html: {class: 'ui form'}) do |f|
          .content
            .field
              = f.label :email, class: "hidden"
              = f.text_field :email, placeholder: 'email'
            .field
              = f.label :password, class: "hidden"
              = f.password_field :password, placeholder: 'password'
            .field
              = link_to "Forgot your password?", new_password_path(:user)
          .actions
            %button.ui.inverted.button.basic.green{type: 'submit'}
              %i.checkmark.icon 
              Log in