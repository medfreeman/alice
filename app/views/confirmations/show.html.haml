%h2 You're almost done! Now create a password to securely access your account.
= form_for(resource, :as => resource_name, :url => confirm_path) do |form|
  = devise_error_messages!
  = form.hidden_field :confirmation_token, :as => :hidden, :input_html => { :value => @original_token }
  .form-group
    = label :password, 'Password'
    = form.password_field :password, :input_html => {:autofocus => true}
  .form-group
    = label :password_confirmation, 'Password Confirmation'
    = form.password_field :password_confirmation
  .form-group
    = form.submit :submit, :label => 'Confirm Account'